{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "entries": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "date": {
              "type": "string",
              "format": "date"
            },
            "time": {
              "type": "string",
              "format": "time"
            },
            "location": {
              "type": "string"
            },
            "summary": {
              "type": "string"
            }
          },
          "required": ["date", "time", "location", "summary"]
        }
      }
    },
    "required": ["entries"]
  }